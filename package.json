{
  "name": "@zcorky/statuses",
  "version": "1.0.0",
  "description": "HTTP status utility with typescript",
  "main": "lib/index.js",
  "repository": "https://github.com/zcorky/statuses",
  "author": "Zero",
  "license": "MIT",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf -rf lib",
    "test": "NODE_ENV=test nyc mocha test/*.spec.ts --exit --timeout 10000",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.9.4",
    "@zcorky/fz": "^1.0.4",
    "@zcorky/is": "^1.0.5",
    "chai": "^4.1.2",
    "coveralls": "^3.0.2",
    "husky": "^1.2.1",
    "mocha": "^5.2.0",
    "node-fetch": "^2.3.0",
    "nyc": "^13.0.1",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.9",
    "ts-node": "^7.0.1",
    "tslint": "^5.10.0",
    "tslint-eslint-rules": "^5.3.1",
    "tslint-jsdoc-rules": "^0.1.2",
    "typescript": "^3.2.2"
  },
  "files": [
    "lib/index.js",
    "lib/index.d.ts"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  },
  "nyc": {
    "check-coverage": true,
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "publishConfig": {
    "access": "public"
  }
}
